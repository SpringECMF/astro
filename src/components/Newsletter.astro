---
interface Props {
    variant?: 'mid' | 'footer';
}

const { variant = 'mid' } = Astro.props;

const isFooter = variant === 'footer';
---

<section id={isFooter ? "newsletter-footer" : "newsletter"} class=`newsletter-secondary ${isFooter ? 'footer-style' : ''}`>
    <div class="container newsletter-content">
      {!isFooter && (
        <div class="newsletter-text">
            <h3 class="newsletter-title-alt">¿Todavía no estás listo?</h3>
            <p class="newsletter-comfort">Bien. No pasa nada.</p>
            
            <div class="newsletter-path mt-8">
                <p class="path-label">Empieza por aquí:</p>
                <p class="path-description">Ideas reales de automatización para empresas que no quieren perder más tiempo.</p>
            </div>
        </div>
      )}

      <div class=`newsletter-action ${isFooter ? 'footer-action' : ''}`>
        <div class="newsletter-form-box">
            {isFooter ? (
                <div class="footer-header mb-8">
                    <h3 class="newsletter-title-alt footer-title">Newsletter: IA útil para PYMES</h3>
                    <p class="newsletter-sub-label text-muted">(Puedes darte de baja cuando quieras)</p>
                </div>
            ) : (
                <h4 class="newsletter-label">Newsletter</h4>
            )}
            <form class="newsletter-form" action="#" method="post">
                <input id={isFooter ? "newsEmailFooter" : "newsEmail"} type="email" name="email" placeholder="tu@email.com" class="flex-grow" required>
                <div class="privacy-row">
                    <label class="checkbox-container">
                        <input type="checkbox" name="privacy" required>
                        <span class="checkmark"></span>
                        <span class="label-text">He leído y acepto la política de privacidad</span>
                    </label>
                </div>
                <button class="btn btn-primary mt-4 w-full" type="submit">{isFooter ? 'Suscribirme' : 'Recibir ideas útiles'}</button>
            </form>
        </div>
      </div>
    </div>
</section>

<style>
    .newsletter-secondary {
        padding-top: var(--section-spacing);
        padding-bottom: var(--section-spacing);
        background: color-mix(in oklab, var(--surface) 20%, transparent);
        border-top: 1px solid var(--border);
        border-bottom: 1px solid var(--border);
    }
    .newsletter-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
    }
    .newsletter-title-alt {
        font-family: var(--ff-display);
        font-size: 2.5rem;
        font-weight: 800;
        letter-spacing: -0.04em;
        margin: 0;
    }
    .newsletter-comfort {
        font-size: 1.4rem;
        color: var(--muted);
        margin-top: 0.5rem;
    }
    .path-label {
        font-weight: 800;
        font-size: 1.1rem;
        color: var(--brand-pink);
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 0.5rem;
    }
    .path-description {
        font-size: 1.25rem;
        color: var(--text);
        max-width: 400px;
    }
    .newsletter-form-box {
        background: var(--bg);
        padding: 2.5rem;
        border-radius: 20px;
        border: 1px solid var(--border);
        box-shadow: 0 10px 30px -10px rgba(0,0,0,0.1);
        position: relative;
    }
    .footer-style .newsletter-form-box {
        padding: 2rem;
        background: transparent;
        border-color: rgba(255,255,255,0.05);
        box-shadow: none;
    }
    :global(.theme-light) .footer-style .newsletter-form-box {
        border-color: rgba(0,0,0,0.05);
    }

    .newsletter-label {
        font-family: var(--ff-display);
        font-size: clamp(1.4rem, 2.5vw, 1.8rem);
        font-weight: 800;
        letter-spacing: -0.04em;
        margin-bottom: 2rem;
        color: var(--text);
        text-align: left;
    }
    .footer-title { font-size: 1.8rem; text-align: center; }
    .footer-action { width: 100%; max-width: 500px; margin: 0 auto; }
    .footer-style .newsletter-content { display: block; }

    .newsletter-sub-label {
        font-size: 0.9rem;
        margin-top: 0.5rem;
        opacity: 0.7;
    }

    .newsletter-form { display:flex; flex-direction: column; gap: var(--s-3); max-width: 400px; }
    .w-full { width: 100%; }
    .privacy-row { width: 100%; margin-top: 0.5rem; }
    input { 
        background: var(--bg); 
        color: var(--text); 
        border: 1.5px solid var(--border); 
        border-radius: 12px; 
        padding: 1.1rem 1.2rem;
        transition: all 0.2s;
        width: 100%;
    }
    input:focus { outline: none; border-color: var(--brand-pink); box-shadow: 0 0 0 4px rgba(200, 59, 165, 0.1); }

    @media (max-width: 768px) {
        .newsletter-content { grid-template-columns: 1fr; gap: 2rem; text-align: center; }
        .newsletter-title-alt { font-size: 2rem; }
        .newsletter-form { margin: 0 auto; }
        .path-description { margin: 0 auto; }
    }

    /* Circular Checkbox Styles */
    .checkbox-container {
        display: inline-block;
        position: relative;
        padding-left: 30px;
        margin-bottom: 0;
        cursor: pointer;
        user-select: none;
        font-size: 0.9rem;
        color: var(--muted);
    }
    .checkbox-container input {
        position: absolute;
        opacity: 0;
        cursor: pointer;
        height: 0;
        width: 0;
    }
    .checkmark {
        position: absolute;
        top: -1px;
        left: 0;
        height: 20px;
        width: 20px;
        background-color: var(--bg);
        border: 1px solid var(--border);
        border-radius: 50%;
        transition: all 0.2s;
    }
    .checkbox-container:hover input ~ .checkmark {
        border-color: var(--brand-purple);
    }
    .checkbox-container input:checked ~ .checkmark {
        background-color: var(--brand-purple);
        border-color: var(--brand-purple);
    }
    .checkmark:after {
        content: "";
        position: absolute;
        display: none;
    }
    .checkbox-container input:checked ~ .checkmark:after {
        display: block;
    }
    .checkbox-container .checkmark:after {
        left: 6px;
        top: 3px;
        width: 4px;
        height: 8px;
        border: solid white;
        border-width: 0 2px 2px 0;
        transform: rotate(45deg);
    }
</style>
