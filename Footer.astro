---
const currentYear = new Date().getFullYear();
---

<footer>
    <div class="container footer-content">
      <div class="footer-brand">© <span id="year">{currentYear}</span> El club de la mente fría</div>
      <div class="links">
        <a href="#" aria-label="Aviso legal">Aviso legal</a>
        <a href="#" aria-label="Privacidad">Privacidad</a>
        <a href="#" aria-label="Cookies">Cookies</a>
      </div>
    </div>
</footer>

<style>
    footer { 
        border-top: 1px solid rgba(255, 255, 255, 0.05); 
        padding: var(--s-8) 0; 
        color: var(--muted); 
        font-size: 0.9rem; 
        margin-top: var(--s-8);
        background: color-mix(in oklab, var(--bg) 95%, white 2%);
    }
    .footer-content { display:flex; gap: var(--s-5); flex-wrap:wrap; justify-content:space-between; align-items:center; }
    .footer-brand { font-weight: 700; color: var(--text); letter-spacing: -0.02em; }
    .links { display:flex; gap: var(--s-6); }
    a { color: var(--muted); text-decoration: none; transition: all 0.2s; font-weight: 500; }
    a:hover { color: var(--brand-pink); }
</style>
